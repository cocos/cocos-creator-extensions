{
    "$schema": "https://schemastore.azurewebsites.net/schemas/json/tsconfig.json",
    "compilerOptions": {
        "target": "ES2021",
        "module": "CommonJS",
        "inlineSourceMap": true,
        "inlineSources": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "experimentalDecorators": true,
        "lib": [
            "DOM",
            "ScriptHost",
            "ES2021"
        ],
        "importHelpers": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "types": [
            "node",
            "@cocos/creator-types/editor",
            "@cocos/creator-types/engine",
        ]
    },
    "include": [
        "./@types",
        "./src",
    ],
    "exclude": [
        "./static",
        "./shader-node/assets"
    ]
}
